<Window x:Class="KeySmash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeySmash"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Height="25" Background="LightGray"
        Title="KeySmash" ResizeMode="NoResize" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="2">

            <Menu x:Name="SettingsMenu" Margin="2">
                <MenuItem Header="⚙">
                    <MenuItem Header="_Hotkeys">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Type text" Width="100"/>
                            <TextBox x:Name="HotkeyTypeTextKey" Width="30"/>
                            <TextBlock Text="Key" Margin="5 0"/>
                            <CheckBox Content="Ctrl" x:Name="HotkeyTypeTextCtrl" Margin="10 0"  VerticalAlignment="Center"/>
                            <CheckBox Content="Alt" x:Name="HotkeyTypeTextAlt" Margin="10 0"  VerticalAlignment="Center"/>
                            <CheckBox Content="Shift" x:Name="HotkeyTypeTextShift" Margin="10 0"  VerticalAlignment="Center"/>
                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Get Clipboard" Width="100"/>
                            <TextBox x:Name="HotkeyGetClipboardKey" Width="30"/>
                            <TextBlock Text="Key" Margin="5 0"/>
                            <CheckBox Content="Ctrl" x:Name="HotkeyGetClipboardCtrl" Margin="10 0"  VerticalAlignment="Center"/>
                            <CheckBox Content="Alt" x:Name="HotkeyGetClipboardAlt" Margin="10 0"  VerticalAlignment="Center"/>
                            <CheckBox Content="Shift" x:Name="HotkeyGetClipboardShift" Margin="10 0"  VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="Save" Width="100" Click="UpdateHotkeys"/>
                    </MenuItem>
                    <MenuItem Header="_Delay">
                        
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="-" Padding="5 0" Click="ClickDecreaseDelay"/>
                                <TextBlock x:Name="DelayInput" Text="4" Width="40" HorizontalAlignment="Center" Padding="5 0"/>
                                <Button Content="+" Padding="5 0" Click="ClickIncreaseDelay"/>
                            </StackPanel>
                        
                    </MenuItem>

                    <MenuItem Header="_Color">
                        <StackPanel Orientation="Horizontal">
                            <Button Width="20" Height="20" Margin="2 0" Background="LightGray" Click="ClickColor"/>
                            <Button Width="20" Height="20" Margin="2 0" Background="Orange" Click="ClickColor"/>
                            <Button Width="20" Height="20" Margin="2 0" Background="Yellow" Click="ClickColor"/>
                            <Button Width="20" Height="20" Margin="2 0" Background="Green" Click="ClickColor"/>
                            <Button Width="20" Height="20" Margin="2 0" Background="CornflowerBlue" Click="ClickColor"/>
                        </StackPanel>
                    </MenuItem>
                    
                    <MenuItem Header="Slow output" IsCheckable="True" x:Name="MenuItemSlowMode" IsChecked="{Binding UseKeyInterval}"/>
                    <MenuItem Header="Fix caret (^)" IsCheckable="True" x:Name="MenuItemFixCaret" IsChecked="{Binding FixScandinavianCaret}"/>
                    <!-- <MenuItem Header="_Hide text" x:Name="MenuItemToggleHiddenText" Click="ToggleHiddenText"/> -->
                    <MenuItem Header="E_xit" Click="ExitApplication"/>
                </MenuItem>
            </Menu>

            <Grid Width="50" Height="20"/>
            <RichTextBox x:Name="TextBoxMain" Width="170" Margin="2 2" FontFamily="Consolas" FontSize="14"/>

            <Button x:Name="ButtonSendText" Content="Send" Padding="3 0" Margin="2 2" Click="ButtonSendText_Click"/>
        </StackPanel>
    </Grid>
</Window>
