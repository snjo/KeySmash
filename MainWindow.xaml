<Window x:Class="KeySmash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeySmash"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Height="25"
        Title="KeySmash" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="2">

            <Menu x:Name="SettingsMenu" Margin="2">
                <MenuItem Header="⚙">
                    <MenuItem Header="_Hotkeys"/>
                    <MenuItem Header="_Delay">
                        
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="-" Padding="5 0"/>
                                <TextBlock x:Name="DelayInput" Text="4" Width="20" Padding="5 0"/>
                                <Button Content="+" Padding="5 0"/>
                            </StackPanel>
                        
                    </MenuItem>
                    <!-- <MenuItem Header="_Hide text" x:Name="MenuItemToggleHiddenText" Click="ToggleHiddenText"/> -->
                    <MenuItem Header="E_xit"/>
                </MenuItem>
            </Menu>

            <Grid Width="50" Height="20"/>
            <TextBox x:Name="TextBoxMain" Width="170" Margin="2 2" FontFamily="Consolas" FontSize="14"/>

            <Button x:Name="ButtonSendText" Content="Send" Padding="3 0" Margin="2 2" Click="ButtonSendText_Click"/>
        </StackPanel>
    </Grid>
</Window>
